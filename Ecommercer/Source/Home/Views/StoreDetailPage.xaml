<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:Class="Ecommercer.Source.Home.Views.StoreDetailPage">
    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="100" />
                <RowDefinition
                    Height="40" />
                <RowDefinition
                    Height="40" />
                <RowDefinition
                    Height="40" />
                <RowDefinition
                    Height="16" />
                <RowDefinition
                    Height="40" />
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <!--header-->
            <Image
                Grid.RowSpan="2"
                Aspect="AspectFill"
                Source="imgHeader" />

            <!--avatar-->
            <Frame
                Grid.Row="1"
                Grid.RowSpan="2"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="80"
                WidthRequest="80"
                BorderColor="White"
                CornerRadius="40"
                Padding="0">
                <ffimage:CachedImage
                    Source="user1" />
            </Frame>

            <!--name-->
            <StackLayout
                Margin="16,0"
                VerticalOptions="Center"
                Grid.Row="3">
                <Label
                    VerticalTextAlignment="Start"
                    HorizontalTextAlignment="Center"
                    FontSize="19"
                    Text="cxvbxcvbxcvb" />

                <Label
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="End"
                    FontSize="10"
                    TextColor="#A6B0BD"
                    Text="asdasdasd" />
            </StackLayout>

            <BoxView
                Grid.Row="4"
                VerticalOptions="Center"
                HeightRequest="1"
                HorizontalOptions="Center"
                WidthRequest="80"
                Color="#E1E4EC" />

            <!--rating-->
            <StackLayout
                Margin="16,0"
                VerticalOptions="Center"
                Grid.Row="5">
                <Image
                    Source="icRating" />

                <Label
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="End"
                    FontSize="11"
                    TextColor="#A6B0BD">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span
                                Text="123" />
                            <Span
                                Text=" reviews" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>

            <!--list item-->
            <CollectionView
                Grid.Row="6"
                HorizontalScrollBarVisibility="Never">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Horizontal"
                        ItemSpacing="24" />
                </CollectionView.ItemsLayout>

                <CollectionView.Header>
                    <BoxView
                        HorizontalOptions="Center"
                        WidthRequest="24" />
                </CollectionView.Header>

                <CollectionView.Footer>
                    <BoxView
                        HorizontalOptions="Center"
                        WidthRequest="72" />
                </CollectionView.Footer>

                <CollectionView.ItemsSource>
                    <x:Array
                        Type="{x:Type x:String}">
                        <x:String>mono</x:String>
                        <x:String>monodroid</x:String>
                        <x:String>monotouch</x:String>
                        <x:String>monorail</x:String>
                        <x:String>monodevelop</x:String>
                        <x:String>monotone</x:String>
                        <x:String>monopoly</x:String>
                        <x:String>monomodal</x:String>
                        <x:String>mononucleosis</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame
                                IsClippedToBounds="True"
                                WidthRequest="160"
                                HeightRequest="220"
                                Padding="0"
                                CornerRadius="14"
                                Margin="0,8">
                                <Frame.GestureRecognizers>
                                    <!--<TapGestureRecognizer
                                        Command="{Binding Source={Reference self}, Path=BindingContext.ItemDetailCommand}"
                                        />-->
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition
                                            Width="56" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition
                                            Height="56" />
                                        <RowDefinition />
                                        <RowDefinition
                                            Height="40" />
                                    </Grid.RowDefinitions>

                                    <!--button-->
                                    <ffimage:CachedImage
                                        Grid.Column="2"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Aspect="AspectFit"
                                        Source="icAddToCart" />

                                    <!--Image product-->
                                    <Frame
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Grid.Row="1"
                                        HasShadow="False"
                                        Grid.ColumnSpan="3"
                                        Padding="0">
                                        <ffimage:CachedImage
                                            HeightRequest="200"
                                            WidthRequest="200"
                                            Aspect="AspectFit"
                                            Source="product1" />
                                    </Frame>

                                    <!--detail-->
                                    <StackLayout
                                        Grid.Row="2"
                                        Grid.ColumnSpan="3"
                                        Margin="0,0,0,16">
                                        <Label
                                            TextColor="#1E2024"
                                            HorizontalTextAlignment="Center"
                                            Text="BO PLAY BeoPlay H8"
                                            FontSize="9" />
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            TextColor="#1E2024"
                                            FontSize="17">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span
                                                        Text="$" />
                                                    <Span
                                                        Text="499.95" />
                                                    <!--<Span
                                                        Text="{Binding Product_ordered, StringFormat='{0:dd/MM/yyyy}'}" />-->
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
                Margin="16,0"
                BackgroundColor="Transparent"
                HeightRequest="48"
                Grid.Row="7"
                CornerRadius="10"
                VerticalOptions="Center"
                Text="FOLLOW STORE"
                TextColor="#327AE5"
                BorderColor="#327AE5"
                BorderWidth="2" />
        </Grid>
    </StackLayout>
</ContentPage>
