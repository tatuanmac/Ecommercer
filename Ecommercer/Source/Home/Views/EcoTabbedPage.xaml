<?xml version="1.0" encoding="utf-8"?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Ecommercer.Source.Home.Views"
    xmlns:views1="clr-namespace:Ecommercer.Source.Deals.Views"
    xmlns:views2="clr-namespace:Ecommercer.Source.Cart.Views"
    xmlns:views3="clr-namespace:Ecommercer.Source.Tags.Views"
    xmlns:views4="clr-namespace:Ecommercer.Source.Profile.Views"
    x:Class="Ecommercer.Source.Home.Views.EcoTabbedPage">
    <TabbedPage.Children>
        <views:HomePage
            IconImageSource="icHome"
            Title="Home" />

        <views1:DealsPage
            IconImageSource="icDeals"
            Title="Deals" />

        <views2:CartPage
            IconImageSource="icCartBlue" />

        <views3:TagsPage
            IconImageSource="icTags"
            Title="Tags" />

        <views4:ProfilePage
            IconImageSource="icProfile"
            Title="Profile" />

    </TabbedPage.Children>
</TabbedPage>
