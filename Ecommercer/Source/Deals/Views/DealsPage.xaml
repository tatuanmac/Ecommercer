<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:Name="self"
    BackgroundColor="{StaticResource BackgroundColor}"
    x:Class="Ecommercer.Source.Deals.Views.DealsPage">
    <StackLayout>
        <CollectionView
            BackgroundColor="White"
            HeightRequest="56"
            HorizontalOptions="Center"
            ItemsSource="{Binding ToolbarTitle}">
            <CollectionView.Header>
                <BoxView
                    HorizontalOptions="Center"
                    WidthRequest="16" />
            </CollectionView.Header>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout
                    Orientation="Horizontal"
                    ItemSpacing="20" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label
                        Text="{Binding Title}"
                        TextColor="Gray"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={Reference self},Path=BindingContext.EnumCommand}"
                                CommandParameter="{Binding .}" />
                        </Label.GestureRecognizers>
                        <Label.Triggers>
                            <DataTrigger
                                TargetType="Label"
                                Binding="{Binding IsSelected}"
                                Value="True">
                                <Setter
                                    Property="TextColor"
                                    Value="Black" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView
            VerticalScrollBarVisibility="Never"
            BackgroundColor="{StaticResource BackgroundColor}"
            Margin="16,0"
            ItemsSource="{Binding ListDealItems}">
            <CollectionView.Header>
                <BoxView
                    VerticalOptions="Center"
                    HeightRequest="16" />
            </CollectionView.Header>
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    Orientation="Vertical"
                    Span="2"
                    HorizontalItemSpacing="16"
                    VerticalItemSpacing="16" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Frame
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="350">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <ffimage:CachedImage
                                    Aspect="AspectFill"
                                    Source="{Binding Product_big_image}" />
                                <StackLayout
                                    Margin="8,0"
                                    Spacing="8"
                                    Grid.Row="1"
                                    Grid.RowSpan="2">
                                    <Label
                                        Text="{Binding Product_name}"
                                        MaxLines="2"
                                        LineBreakMode="TailTruncation"
                                        HorizontalTextAlignment="Center" />
                                    <Label
                                        Text="{Binding Product_detail}"
                                        MaxLines="3"
                                        FontSize="12"
                                        TextColor="#A6B0BD"
                                        HorizontalTextAlignment="Center" />
                                    <BoxView
                                        Margin="0,8"
                                        VerticalOptions="Center"
                                        HeightRequest="1"
                                        Color="#A6B0BD" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="22"
                                        TextColor="#8DC63F"
                                        HorizontalTextAlignment="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    Text="$" />
                                                <Span
                                                    Text="{Binding Product_price}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Button
                                        BackgroundColor="Transparent"
                                        HeightRequest="48"
                                        Command="{Binding Source={Reference self},Path=BindingContext.BuyCommand}"
                                        CornerRadius="10"
                                        VerticalOptions="Center"
                                        Text="BUY NOW"
                                        TextColor="#327AE5"
                                        BorderColor="#327AE5"
                                        BorderWidth="2" />
                                </StackLayout>

                            </Grid>

                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
